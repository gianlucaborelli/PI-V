@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="true" />
<MudDialogProvider />
<MudSnackbarProvider />
<MudPopoverProvider />

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        PI4 - WEB
    </MudAppBar>
    <MudDrawer ClipMode="DrawerClipMode.Always" Variant="@DrawerVariant.Temporary" Elevation="1" @bind-Open="@_open" OverlayAutoClose="true">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Projeto Integrador 4</MudText>
        </MudDrawerHeader>
        <MudNavMenu>
            <MudDivider />
            <MudNavLink Href="/" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>
            <MudDivider />
            <MudNavLink Href="/sensors" Icon="@Icons.Material.Filled.Dashboard">Dashboard</MudNavLink>
            <MudDivider />
            <MudNavLink Href="/modules" Icon="@Icons.Material.Filled.Dashboard">Módulos</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        <MudContainer>
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _open = false;

    private void ToggleDrawer()
    {
        _open = !_open;
    }
}