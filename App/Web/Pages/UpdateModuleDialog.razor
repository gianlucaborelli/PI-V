@using Shared.Models.DTOs
@inject NavigationManager Navigation
@using Web.Services;
<MudDialog>
    <TitleContent>
        Adicionar novo Módulo
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="Module.Description" Label="Descrição" Variant="Variant.Text"></MudTextField>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public ModuleEspDto Module { get; set; }

    [Inject]
    public ISnackbar Snackbar { get; set; } = null!;

    [Inject]
    public IModulesService Service { get; set; }

    private async void Submit()
    {
        var updateMudule = new UpdateModuleRequest()
            {
                ModuleId = Module.Id,
                Description = Module.Description
            };

        var result = await Service.UpdateModule(updateMudule);

        if (result.Data > 0)
        {
            MudDialog.Close(DialogResult.Ok(true));
        }
        else
        {
            Snackbar.Add(result.Message, Severity.Error);
        }
    }

    private void Cancel() => MudDialog.Cancel();
}
